    <script type="text/javascript">
        $(document).ready(function () {
            var trigger = $('.hamburger'),
                overlay = $('.overlay'),
               isClosed = false;

            trigger.click(function () {
                hamburger_cross();
            });

            function hamburger_cross() {

                if (isClosed == true) {
                    overlay.hide();
                    trigger.removeClass('is-open');
                    trigger.addClass('is-closed');
                    isClosed = false;
                } else {
                    overlay.show();
                    trigger.removeClass('is-closed');
                    trigger.addClass('is-open');
                    isClosed = true;
                }
            }

            $('[data-toggle="offcanvas"]').click(function () {
                $('#wrapper').toggleClass('toggled');
            });
        });
        function showFromDoiMk() {
            $('#editDivModal').modal('show');
            $('#editDivModal #myModalLabel').html(_title);
        }
        function saveMK() {
            $('#dialog-err').text("");
            var dataList = [];
            var data = {
                ID: @Session["id_sv"].ToString() + "",
                mk_cu: $('#mk_cu').val() + "",
            };
            dataList.push(data);
            $.ajax({
                url: '/SinhVien/KtraMk',
                data: { cartModel: JSON.stringify(dataList) },
                dataType: 'json',
                type: 'POST',
                success: function (res) {
                    if (res.res == 0) {
                        $('#dialog-err').text("Mật khẩu cũ không đúng");
                    }
                    else {
                        if ($('#mk_moi').val()  == $('#mk_cu').val()) {
                            $('#dialog-err').text("Mật khẩu mới không được trùng với mật khẩu cũ");
                            return;
                        }
                        if ($('#mk_moi').val().length < 5) {
                            $('#dialog-err').text("Độ dài mật khẩu phải lớn hơn hoặc bằng 5 ký tự");
                            return;
                        }
                        if ($('#mk_moi').val() == $('#mk_nhap').val()) {
                            var dataList2 = [];
                            var data2 = {
                                ID: @Session["id_sv"].ToString() + "",
                                mk_moi: $('#mk_moi').val() + "",
                            };
                            dataList2.push(data2);
                            $.ajax({
                                url: '/SinhVien/updateMk',
                                data: { cartModel: JSON.stringify(dataList2) },
                                dataType: 'json',
                                type: 'POST',
                                success: function (res) {
                                    if (res.res == 0) {
                                        $('#dialog-err').text("Mật khẩu cũ không đúng");
                                    }
                                    else {
                                        location.reload();
                                        $('#editDivModal').modal('hide');
                                    }
                                }
                            })
                        } else {
                            $('#dialog-err').text("Mật khẩu mới không giống nhau");
                        }
                    }
                }
            })
        }
