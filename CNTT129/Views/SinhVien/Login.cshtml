@{
    ViewBag.Title = "Login";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<style>
    body{
        background-image: url(../IMG/cac-truong-dai-hoc-cong-lap-tang-hoc-phi-nam-hoc-toi.jpg);
        background-repeat: no-repeat;
        background-position: center;
         background-size: cover;
         opacity: 0.9;
    }
    #login .container #login-row #login-column #login-box {
  margin-top: 120px;
  max-width: 600px;
  height: 320px;
  border: 1px solid #9C9C9C;
  background-color: #EAEAEA;
}
#login .container #login-row #login-column #login-box #login-form {
  padding: 20px;
}
#login .container #login-row #login-column #login-box #login-form #register-link {
  margin-top: -85px;
}
</style>
<body>
    @using (Html.BeginForm("Login", "SinhVien", FormMethod.Post, new { @class = "" }))
        {
    <div id="login">
        <h3 class="text-center text-white pt-5">
            <img src="../IMG/untitled.png" class="col-12" style="width: 200px;height: 180px" alt="Alternate Text" />
        </h3>
        <h1 class="text-center text-white pt-5"> SINH VIÊN</h1>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Username:</label><br>
                                <input type="text" required name="username" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="password" name="password" id="password" required class="form-control">
                            </div>
                            <div class="form-group">
                                <p>@ViewBag.TB</p>
                                <input type="submit" name="login" class="btn btn-info btn-md" value="login">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
        }
</body>
